@page "/pc"

<h3 style="@Style;@border">ParentComponent</h3>

<CascadingValue Value="Style" Name="color" IsFixed="true">
	<CascadingValue Value="border" Name="border" IsFixed="true">
		<ChildComponent />
	</CascadingValue>
</CascadingValue>

@code {
	public string Style { get; set; } = "color:red";

	public string border { get; set; } = "border: 1px solid black";
}
